<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="45.0dp"
        android:background="#FFCD2626"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/title_cityManager"
            android:layout_width="45.0dp"
            android:layout_height="45.0dp"
            android:src="@drawable/title_city"/>

        <ImageView
            android:id="@+id/citySeperator1"
            android:layout_width="1.0dip"
            android:layout_height="40.0dip"
            android:layout_marginTop="2.0dip"
            android:layout_toRightOf="@id/title_cityManager"
            android:background="#A71717"/>

        <TextView
            android:id="@+id/title_cityName"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/citySeperator1"
            android:gravity="center_vertical"
            android:paddingLeft="5dip"
            android:text="北京市"
            android:textColor="#FFFFFF"
            android:textSize="22.0sp"/>

        <ImageView
            android:id="@+id/title_updateBtn"
            android:layout_width="45.0dp"
            android:layout_height="45.0dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:src="@drawable/title_update"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/citySeperator2"
            android:layout_width="1.0dip"
            android:layout_height="40.0dip"
            android:layout_marginTop="2.0dip"
            android:layout_toLeftOf="@+id/title_updateBtn"
            android:background="#A71717"/>

        <ImageView
            android:id="@+id/title_share"
            android:layout_width="45.0dp"
            android:layout_height="45.0dp"
            android:layout_toLeftOf="@+id/title_updateBtn"
            android:src="@drawable/title_share"/>

        <ImageView
            android:id="@+id/citySeperator3"
            android:layout_width="1.0dip"
            android:layout_height="40.0dip"
            android:layout_marginTop="2.0dip"
            android:layout_toLeftOf="@+id/title_share"
            android:background="#A71717"/>

        <ImageView
            android:id="@+id/title_location"
            android:layout_width="45.0dp"
            android:layout_height="45.0dp"
            android:layout_toLeftOf="@+id/title_share"
            android:src="@drawable/base_action_bar_action_city"/>

        <ImageView
            android:id="@+id/citySeperator4"
            android:layout_width="1.0dip"
            android:layout_height="40.0dip"
            android:layout_marginTop="2.0dip"
            android:layout_toLeftOf="@+id/title_location"
            android:background="#A71717"/>

    </RelativeLayout>

</RelativeLayout>
